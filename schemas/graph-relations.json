{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Invocation Graph Relations Schema",
  "description": "Defines how brands, products, services, signals, and decision pathways interrelate inside an Invocation Graph.",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "node_id": { "type": "string" },
          "node_type": {
            "type": "string",
            "enum": ["brand", "product", "service", "signal", "pathway", "event"]
          },
          "metadata": { "type": "object" }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "relationship": { "type": "string" },
          "weight": { "type": "number" }
        },
        "required": ["source", "target", "relationship"]
      }
    }
  }
}
