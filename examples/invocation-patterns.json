{
  "version": "0.2",
  "updated": "2025-11-30",
  "maintainer": "Imvara",
  "description": "Reusable Invocation patterns across domains. Each pattern describes how AI agents should interpret intent, entities, signals, constraints, and the decision strategies for producing reliable Invocation outcomes.",
  "patterns": [
    {
      "id": "retail.product_comparison",
      "domain": "retail",
      "intent_type": "product_comparison",
      "example_query": "best protein powder for muscle gain under $50",
      "primary_entity_class": "Product",
      "entities": [
        "Product",
        "NutritionProfile",
        "Brand",
        "PricePoint",
        "Attribute",
        "Availability"
      ],
      "signals": [
        "protein_per_serving",
        "sugar_per_serving",
        "price_per_serving",
        "ingredient_purity",
        "third_party_verification",
        "rating_score",
        "in_stock"
      ],
      "constraints": [
        "budget_max",
        "goal",
        "ingredient_preferences"
      ],
      "decision_strategy": {
        "type": "weighted_scoring",
        "weights": {
          "protein_per_serving": 0.35,
          "ingredient_purity": 0.25,
          "price_per_serving": 0.20,
          "sugar_per_serving": 0.10,
          "rating_score": 0.10
        }
      },
      "outcome_type": "ranked_recommendation",
      "output_explanation_required": true
    },
    {
      "id": "insurance.plan_recommendation",
      "domain": "insurance",
      "intent_type": "plan_recommendation",
      "example_query": "which health insurance plan is best for a freelancer",
      "primary_entity_class": "HealthInsurancePlan",
      "entities": [
        "Plan",
        "Coverage",
        "Deductible",
        "Premium",
        "RiskProfile",
        "ProviderNetwork"
      ],
      "signals": [
        "premium_amount",
        "deductible_amount",
        "out_of_pocket_max",
        "coverage_tier",
        "network_size",
        "preventive_care_rating",
        "claims_reliability"
      ],
      "constraints": [
        "budget_max",
        "risk_tolerance",
        "provider_preferences"
      ],
      "decision_strategy": {
        "type": "utility_optimization",
        "weights": {
          "premium_amount": 0.30,
          "deductible_amount": 0.20,
          "network_size": 0.20,
          "coverage_tier": 0.20,
          "claims_reliability": 0.10
        }
      },
      "outcome_type": "best_fit_plan",
      "output_explanation_required": true
    },
    {
      "id": "automotive.category_selection",
